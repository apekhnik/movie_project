datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5432/movie_app?schema=public"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int     @id @default(autoincrement())
  login     String  @unique
  password  String
  movieList Json[]
  movies    Movie[] // Связь с фильмами (опционально, для удобства запросов)
}

model Movie {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  type        String
  users       User[] // Связь с пользователями (опционально)
}
